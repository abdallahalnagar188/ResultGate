<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:layoutDirection="locale">

    <ProgressBar
        android:id="@+id/HFLayout_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/eramo_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/HFLayout_tv_noLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibmplexsansregular"
        android:text="@string/something_went_wrong"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible" />

    <Button
        android:id="@+id/HFLayout_btn_retry"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/shape_purple"
        android:fontFamily="@font/ibmplexsansregular"
        android:text="@string/retry"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>